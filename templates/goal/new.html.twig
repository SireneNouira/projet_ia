{% extends 'base.html.twig' %}

{% block title %}New Goal{% endblock %}

{% block body %}
    <h1>Create new Goal</h1>

    {{ include('goal/_form.html.twig') }}
    {{ form.start(form) }}
        {{ form.row(form.title) }}
        {{ form.row(form.description) }}
        {{ form.row(form.date) }}
        {{ form.row(form.category) }}
        {{ form.row(form.progress) }}
        {{ form.end() }}

    <a href="{{ path('app_goal_index') }}">back to list</a>
{% endblock %}
